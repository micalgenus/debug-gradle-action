{
  "name": "debug-gradle-action",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "babel src --out-dir dist --copy-files --extensions \".ts,.tsx\"",
    "dev": "NODE_ENV=test nodemon --legacy-watch src/* --exec babel-node --extensions \".ts,.tsx\" src/index.ts",
    "test:action": "node -r ./test/babel.js ./src/action.ts",
    "test:post-action": "node -r ./test/babel.js ./src/post-action.ts",
    "test": "",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "type-check": "tsc --noEmit **/*.ts"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.5",
    "nodemon": "^2.0.3",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && git add dist"
    }
  },
  "dependencies": {
    "@actions/core": "^1.2.3"
  }
}
